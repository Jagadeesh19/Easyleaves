<%- include("../includes/start.ejs")%>
<link rel="stylesheet" type="text/css" href="/css/forms.css">
<link rel="stylesheet" type="text/css" href="/css/employee.css">

</head>
<body>
<%-include("../includes/navigation.ejs")%>

<% if (errorMessage) {%>

    <div class="user-message user-message--error"><%= errorMessage%></div>

<% } %>

<br>

<form class="employee-form jumbotron shadow" action="/admin/<% if (editing) {%>edit-employee<% } else {%>add-employee <% }%>" method="post">

    <% if (!editing) {%>

        <div class="">
            <!--<label for="name">Name</label>-->
            <input class="form-control-sm form-control" type="text" id="name" placeholder="Employee Name" name="name" value="<% if (editing) {%><%= employee.name%><%} %>">
        </div>

        <br>

        <div class="">
            <!--<label for="email">Email</label>-->
            <input class="form-control-sm form-control" type="email" placeholder="Employee Email" id="email" name="email" value="<% if (editing) {%><%= employee.email%><%} %>">
        </div>

    <% } else { %>
        <input class="form-control-sm form-control" type="hidden" name="employeeId" value="<%= employee._id%>">

    <% }%>

    <br>

    <div class="">
        <!--<label for="supervisor">Supervisor</label>-->
        <input class="form-control-sm form-control" type="email" placeholder="Supervisor Email" id="supervisor" name="supervisor" value="<% if (editing && employee.supervisor) {%><%= employee.supervisor.email%><%} %>">
    </div>

    <br>

    <button class="btn btn-sm" type="submit"><% if (editing) {%> Update Employee<% } else {%>Add Employee<% } %></button>


</form>

<%-include("../includes/end.ejs")%>

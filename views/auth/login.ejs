<%- include("../includes/start.ejs")%>
<link rel="stylesheet" type="text/css" href="css/forms.css">
<link rel="stylesheet" type="text/css" href="css/auth.css">


</head>
<body>
<%-include("../includes/navigation.ejs")%>

<% if (errorMessage) {%>

    <div class="user-message user-message--error"><%= errorMessage%></div>

<% } %>

<br>
<br>

<form class="login-form jumbotron shadow" action="/login" method="post">

    <div>
        <!--<label for="username">Username</label>-->
        <div class="input-group">

            <div class="input-group-prepend">
            <span class="input-group-text">
                <i class="fas fa-user"></i>
            </span>
            </div>
            <input class="form-control form-control-sm" type="text" id="username" name="username" placeholder="Username" value="<%=oldInput.username%>">
        </div>
    </div>

    <div>
        <!--<label for="password">Password</label>-->
        <div class="input-group">

            <div class="input-group-prepend">
            <span class="input-group-text">
                <i class="fas fa-key"></i>
            </span>
            </div>
            <input class="form-control form-control-sm" type="password" id="password" name="password" placeholder="Password" value="<%=oldInput.password%>">
        </div>
    </div>

    <br>

    <div class="d-flex flex-row justify-content-between">
        <button class="btn btn-sm" type="submit">Login</button>

        <a class="link" href="/reset">Reset password</a>
    </div>

</form>
<%-include("../includes/end.ejs")%>
